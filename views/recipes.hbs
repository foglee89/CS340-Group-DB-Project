{{! recipes.hbs }}
 
{{#extends "layout"}}
 
    {{#block "scripts"}}
    {{/block}}
 
    {{#block "content" mode="append"}}

        {{#*inline "recipes-table"}}
            <table class="u-full-width">
                <thead>
                    <tr>
                        <th>recipe_id</th>
                        <th>recipe_name</th>
                        <th>total_time</th>
                        <th>active_time</th>
                        <th>edit</th>
                        <th>delete</th>
                    </tr>
                </thead>
                <tbody>
                        <tr>
                            <form>
                                <td><input type="number" value="" id=""></td>
                                <td><input type="text" value="" id=""></td>
                                <td><input type="time" value="" id=""></td>
                                <td><input type="time" value="" id=""></td>
                                <td><input type="button" value="📝" id=""></td>
                                <td><input type="button" value="❌" id=""></td>
                            </form>
                        </tr>
                    {{#each recipes}}
                        <tr>
                            <form>
                                <td><input type="number" value="{{recipe_id}}" id="f{{recipe_id}}"></td>
                                <td><input type="text" value="{{recipe_name}}" id="{{recipe_name}}"></td>
                                <td><input type="time" value="{{total_time}}" id="{{total_time}}"></td>
                                <td><input type="time" value="{{total_time}}" id="{{total_time}}"></td>
                                <td><input type="button" value="📝" id=""></td>
                                <td><input type="button" value="❌" id=""></td>
                            </form>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{/inline}}

        {{> recipes-table}}

        <!-- Always wrap checkbox and radio inputs in a label and use a <span class="label-body"> inside of it -->

        <!-- Note: The class .u-full-width is just a utility class shorthand for width: 100% -->
    {{/block}}
 
{{/extends}}