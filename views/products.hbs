        {{#*inline "product-table"}}
            <table class="u-full-width">
                <thead>
                    <tr>
                        <th>product_id</th>
                        <th>product_name</th>
                        <th>product_category</th>
                        <th>location_id</th>
                        <th>stored_quantity</th>
