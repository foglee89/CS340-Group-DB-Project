{{! products.hbs }}
 
{{#extends "layout"}}
 
    {{#block "scripts"}}
    {{/block}}
 
    {{#block "content" mode="append"}}

        {{#*inline "product-table"}}
            <table class="u-full-width">
                <thead>
                    <tr>
                        <th>product_id</th>
                        <th>product_name</th>
                        <th>product_category</th>
                        <th>location_id</th>
                        <th>stored_quantity</th>
                        <th>unit</th>
                        <th>purchase_date</th>
                        <th>expiration_date</th>
                        <th>edit</th>
                        <th>delete</th>
                    </tr>
                </thead>
                <tbody>
                        {{!-- The Create New Overload --}}
                        <tr>
                            <form>
                                <td><input type="number" value="{{product_id}}" id="f{{product_id}}"></td>
                                <td><input type="text" value="{{product_name}}" id="f{{product_name}}"></td>
                                <td><input type="" value="{{product_category}}" id="f{{product_category}}"></td>
                                <td><input type="number" value="{{location_id}}" id="f{{location_id}}"></td>
                                <td><input type="number" value="{{stored_quantity}}" id="f{{stored_quantity}}"></td>
                                <td><input type="text" value="{{unit}}" id="f{{unit}}"></td>
                                <td><input type="date" value="{{purchase_date}}" id="f{{purchase_date}}"></td>
                                <td><input type="date" value="{{expiration_date}}" id="f{{expiration_date}}"></td>
                                <td><input type="button" value="📝" id=""></td>
                                <td><input type="button" value="❌" id=""></td>
                            </form>
                        </tr>
                        {{!-- Per entry goodness --}}
                    {{#each products}}
                        <tr>
                            <form>
                                <td><input type="number" value="{{product_id}}" id="f{{product_id}}"></td>
                                <td><input type="text" value="{{product_name}}" id="f{{product_name}}"></td>
                                <td><input type="" value="{{product_category}}" id="f{{product_category}}"></td>
                                <td><input type="number" value="{{location_id}}" id="f{{location_id}}"></td>
                                <td><input type="number" value="{{stored_quantity}}" id="f{{stored_quantity}}"></td>
                                <td><input type="text" value="{{unit}}" id="f{{unit}}"></td>
                                <td><input type="date" value="{{purchase_date}}" id="f{{purchase_date}}"></td>
                                <td><input type="date" value="{{expiration_date}}" id="f{{expiration_date}}"></td>
                                <td><input type="button" value="📝" id=""></td>
                                <td><input type="button" value="❌" id=""></td>
                            </form>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{/inline}}

        {{> product-table}}

        <!-- Always wrap checkbox and radio inputs in a label and use a <span class="label-body"> inside of it -->

        <!-- Note: The class .u-full-width is just a utility class shorthand for width: 100% -->
    {{/block}}
 
{{/extends}}