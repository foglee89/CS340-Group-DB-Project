{{! recipeDetailView.hbs }}
 
{{#extends "layout"}}
 
    {{#block "scripts"}}
    {{/block}}
 
    {{#block "content" mode="append"}}

        <h3>
            Recipe: {{recipe_name}}
        </h3>

        {{#*inline "recipeData"}}
            <table class="u-full-width">
                <thead>
                    <tr>
                        <!-- <th>product_id</th> -->
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Unit</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                        {{!-- The Create New Overload --}}
                        <tr>
                            <form>
                                <!-- <td><input type="number" value="{{product_id}}" id="f{{product_id}}"></td> -->
                                <td><input type="text" value="{{product_name}}" id="{{product_name}}"></td>
                                <td><input type="number" value="{{stored_quantity}}" id="{{stored_quantity}}"></td>
                                <select name="unit">
                                    <option disabled selected value>select unit of measure</option>
                                    {{#each unit}}
                                    <option value="{{unit}}">{{unit}}</option>
                                    {{/each}}
                                </select>
                                </td>
                                <td><input type="button" value="📝" onclick="" action="/update"></td>
                                <td><input type="button" value="❌" onclick="" action="/delete"></td>
                            </form>
                        </tr>
                        {{!-- Per entry goodness --}}
                    {{#each products}}
                        <tr>
                            <form>
                                <!-- <td><input type="number" value="{{product_id}}" id="f{{product_id}}"></td> -->
                                <td><input type="text" value="{{product_name}}" id="{{product_name}}"></td>
                                <!-- ARBITRARILY SET AS STORED QUANTITY TO HAVE DATA. 
                                     NEEDS CUST UI FUNC TO GEN DATA. MIGHT NEED SOME 
                                     OTHER METHOD FOR COURSE-->
                                <td><input type="number" value="{{stored_quantity}}" id="{{stored_quantity}}"></td>
                                <select name="unit">
                                    {{#each unit}}
                                    <option value="{{unit}}">{{unit}}</option>
                                    {{/each}}
                                    <!-- NEED TO VALIDATE THE SELECTED VALUE INTERACTION WITH QUERY FUNCTION AND HANDLEBARS -->
                                    <option value="{{unit}}" selected="selected">{{unit}}</option>
                                </select>
                                <td><input type="submit" value="📝" onclick="updateProduct" action="/update"></td>
                                <td><input type="submit" value="❌" onclick="deleteProduct" action="/delete"></td>
                            </form>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{/inline}}

        {{> recipeData}}

        <!-- Always wrap checkbox and radio inputs in a label and use a <span class="label-body"> inside of it -->

        <!-- Note: The class .u-full-width is just a utility class shorthand for width: 100% -->
    {{/block}}
 
{{/extends}}