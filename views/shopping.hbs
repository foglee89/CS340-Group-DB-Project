{{! shopping.hbs }}
 
{{#extends "layout"}}
 
    {{#block "scripts"}}
    {{/block}}
 
    {{#block "content" mode="append"}}

        {{#*inline "shopping-table"}}
            <table class="u-full-width">
                <thead>
                    <tr>
                        <th>Purchase Date</th>
                        <th>Meal Plan Range</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                        <tr>
                            <form method="POST">
                                <td><input type="date" value="{{purchase_date}}" id="{{purchase_date}}"></td>
                                <td><input type="number" value="{{meal_plan_range}}" id="{{meal_plan_range}}"></td>
                                <td><input type="submit" value="📝" id=""></td>
                                <td><input type="submit" value="❌" id="" formaction="/shopping/delete"></td>
                            </form>
                        </tr>
                    {{#each shopping}}
                        <tr>
                            <form method="POST">
                                <td><input type="date" value="{{purchase_date}}" id="{{purchase_date}}"></td>
                                <td><input type="number" value="{{meal_plan_range}}" id="{{meal_plan_range}}"></td>
                                <td><input type="submit" value="📝" onclick="updateShoppingList"></td>
                                <td><input type="submit" value="❌" id="" formaction="/shopping/delete"></td>
                            </form>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{/inline}}

        {{> shopping-table}}

    {{/block}}
 
{{/extends}}