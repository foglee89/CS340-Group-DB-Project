{{! locations.hbs }}
 
{{#extends "layout"}}
 
    {{#block "scripts"}}
    {{/block}}
 
    {{#block "content" mode="append"}}

        {{#*inline "search-locations"}}
        <h5>
            Search Locations:
        </h5>
            <form id="search-locations" action="" method="">
                Location Name: <input type="text" name="location_name" value="">
                <input type="button" value="Search" onclick="searchLocations()"
            </form>
        {{/inline}}

        {{> search-locations}}

        {{#*inline "location-add"}}
            <table>
                <h5>
                    Add new Location:
                </h5>
                <thead>
                    <tr>
                        <!-- <th>location_id</th> -->
                        <th>Location Name</th>
                        <!-- <th>Category</th> -->
                        <!-- <th>Product_id</th> -->
                        <th>Add</th>
                    </tr>
                </thead>
                <tbody>
                        <tr>
                            <form method="POST">
                                <!-- <td><input type="number" value="" id=""></td> -->
                                <td><input type="text" id="{{location_name}}"></td>
                                <!-- <td><input type="text" value="{{category}}" id="{{category}}"></td> -->
                                <!-- <td><input type="number" value="" id=""></td> -->
                                <td><input type="submit" value="✅" onclick=""></td>
                            </form>
                        </tr>
                </tbody>
            </table>
        {{/inline}}

        {{> location-add}}

        <br>
        {{#*inline "location-table"}}
            <table class="u-full-width">
                <h5>
                    Current Locations:
                </h5>
                <thead>
                    <tr>
                        <!-- <th>location_id</th> -->
                        <th>Location Name</th>
                        <!-- <th>Category</th> -->
                        <!-- <th>Product_id</th> -->
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each Results}}
                        <tr>
                            <form method="POST">
                                <!-- <label for="f{{location_id}}">
                                    <td><input type="number" value="{{location_id}}" id="f{{location_id}}"></td>
                                </label> -->
                                <td><input type="text" value="{{location_name}}" id="{{location_name}}"></td>
                                <!-- <td><input type="" value="{{category}}" id="{{category}}"></td> -->
                                <!-- <td><input type="number" value="{{product_id}}" id="{{product_id}}"></td> -->
                                <td><input type="submit" value="📝" onclick="updateLocation({{location_id}})"></td>
                                <td><input type="submit" value="❌" onclick="deleteLocation({{location_id}})"></td>
                            </form>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{/inline}}

        {{> location-table}}

        <!-- Always wrap checkbox and radio inputs in a label and use a <span class="label-body"> inside of it -->

        <!-- Note: The class .u-full-width is just a utility class shorthand for width: 100% -->
    {{/block}}
 
{{/extends}}